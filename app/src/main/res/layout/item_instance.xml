<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bulge_white_filletborder_bg_layer"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/device_list_name_bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_instance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="测试申请人提出申请"
                android:textColor="@color/date_picker_text_dark"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/item_instance_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="办理中"
                    android:textColor="@color/date_picker_text_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <!-- <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="@drawable/oval_txt_stroke_bg"
                 android:gravity="center_horizontal|center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="详情"
                     android:textColor="@color/gray_two"
                     android:textSize="14sp" />

             </LinearLayout>-->

            <TextView
                android:id="@+id/item_instance_createdtime_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间："
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_createdtime_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_instance_starttime_txt1"
                android:text="2020-01-12 17:52:27"
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_starttime_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_instance_createdtime_txt1"
                android:layout_marginTop="3dp"
                android:text="受理时间："
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_starttime_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_instance_createdtime_txt"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/item_instance_starttime_txt1"
                android:text="2020-01-12 17:52:27"
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_endtime_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_instance_starttime_txt1"
                android:layout_marginTop="3dp"
                android:text="结束时间："
                android:textColor="@color/gray_two"
                android:visibility="gone"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_endtime_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_instance_starttime_txt"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/item_instance_starttime_txt1"
                android:text="2020-01-12 17:52:27"
                android:visibility="gone"
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_instance_endtime_txt1"
                android:layout_marginTop="3dp"
                android:text="当前节点："
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_instance_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_instance_endtime_txt"
                android:layout_marginTop="3dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/item_instance_content1"
                android:text="材料不齐全或者不符合法定形式"
                android:textColor="@color/gray_two"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>